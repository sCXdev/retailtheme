                    <img class="cat-image {{settings.cat_image_type}}" aria-label="{{settings.category_man_title}}" src="{{settings.category_man_image}}">
              </div>
              {{/isnt}}
                  <span class="blocks-item-title {{settings.cat_title_style}}">
                    {{settings.category_man_title}}
                  </span>
                  {{#if settings.show_description_cat}}
                  <span class="blocks-item-description">{{settings.category_man_desc}}</span>
                   {{/if}}
                </a>
              </li>
        {{/if}}
      </ul>
      {{pagination}}
    </section>

    {{#if promoted_articles}}
      <section class="articles">
        <h2>{{t 'promoted_articles'}}</h2>
        <ul class="article-list promoted-articles">
