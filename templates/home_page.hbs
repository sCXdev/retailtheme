  <section class="section knowledge-base">
    <h2 class="visibility-hidden">{{ t 'categories' }}</h2>
    <section class="categories blocks">
      <ul class="blocks-list">
        {{#each categories}}
          {{#if ../has_multiple_categories}}
            <li class="blocks-item {{../settings.cat_border_type}}">
              <a href='{{url}}' class="blocks-item-link">
                {{#isnt ../settings.cat_image_type 'no_image'}}
              <div class="cat-overflow" id="cat-image-{{id}}">
                  <script>
                    if (categoryImages[{{id}}] != undefined) {
                      document.getElementById(`cat-image-{{id}}`).insertAdjacentHTML('afterbegin', `<img class="cat-image {{../settings.cat_image_type}}" aria-label="An image for the category {{name}}" src="${categoryImages[{{id}}]}">
                        `)};
                  </script>
              </div>
              {{/isnt}}
                <span class="blocks-item-title {{../settings.cat_title_style}}">{{name}}</span>
                {{#if ../settings.show_description_cat}}
                <span class="blocks-item-description">{{excerpt description}}</span>
                {{/if}}
              </a>
            </li>
          {{else}}
            {{#each sections}}
              <li class="blocks-item {{../../settings.cat_border_type}}">
                <a href='{{url}}' class="blocks-item-link">
                  {{#isnt ../../settings.cat_image_type 'no_image'}}
                  <div class="cat-overflow" id="cat-image-{{id}}">
                  <script>
                    if (categoryImages[{{id}}] != undefined) {
                      document.getElementById(`cat-image-{{id}}`).insertAdjacentHTML('afterbegin', `<img class="cat-image {{../../settings.cat_image_type}}" aria-label="An image for the category {{name}}" src="${categoryImages[{{id}}]}">
                        `)};
                  </script>
              </div>
              {{/isnt}}
